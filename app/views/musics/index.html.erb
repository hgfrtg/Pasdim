<%= stylesheet_link_tag 'top_list' %>
<%= render 'layouts/jumbotron' %>
<div class="container" style="background-color:#f5f5f5;">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item active" aria-current="page">トップ</li>
    </ol>
  </nav>
  <h1>Musics</h1>
  <div class="row no-gutters">
    <div class="col-md-8 align-self-center" style="background-color:#e6e6e6;">
      <%= render 'musics/toplist', musics: @musics%>
    </div>
    <div class="col-md-4" style="background-color:#e6e6e6;">
      <!--       <div class="row"> -->
        <%= render 'layouts/search_form' %>
        <div class="w-auto m-2">
          <%= link_to 'https://web-camp.io/' do %>
          <%= image_tag "job-change_ad.jpg", :width =>'100%', :height =>'25%' %>
          <% end %>
        </div>
        <%= render 'musics/random', randmusics: @randmusics%>
      </div>
    </div>
  </div>

  <script>
    audiojs.events.ready(function() {
      var as = audiojs.createAll();
    });
  </script>