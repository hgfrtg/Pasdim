<p id="notice"><%= notice %></p>

<h1>Musics</h1>

<table>
  <thead>
    <tr>
      <th>投稿者</th>
      <th>Title</th>
      <th>Audio</th>
      <th>introduction</th>
      <th>投稿日時</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @musics.each do |music| %>
      <tr>
        <td><%= attachment_image_tag(music.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg") %></td>
        <td><%= music.user.name %></td>
        <td><%= music.title %></td>
        <td><%= audio_tag music.audio %></td>
        <td><%= music.description %></td>
        <td><%= music.created_at.to_s(:datetime_jp) %></td>
        <td><%= link_to 'Show', music %></td>
        <td><%= link_to 'Edit', edit_music_path(music) %></td>
        <td><%= link_to 'Destroy', music, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

