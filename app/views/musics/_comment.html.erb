<div class=".comment_<%= @music.id %>" >
<% music_comments.each do |music_comment| %> <!-- コメント一覧 -->
  <tr>
    <td>
      <%= link_to user_path(music_comment.user), class: "user_#{music_comment.user.id}" do %>
        <%= attachment_image_tag music_comment.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50" %><br>
        <%= music_comment.user.name %>
      <% end %>
    </td>
    <td><%= music_comment.comment %></td>
    <% if music_comment.user == current_user %>
      <td><%= link_to 'Destroy', music_music_comments_path(music_comment), class: 'btn-sm btn-danger', method: :delete, remote: true %></td>
    <% end %>
  </tr>
<% end %>
</div>