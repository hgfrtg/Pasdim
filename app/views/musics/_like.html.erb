        <div class="music_<%= music.id %>" >
          <% if music.favorited_by?(current_user) %>
            <%= link_to music_favorites_path(music), method: :delete, remote: true do %>
              <%= fa_icon "heart", text: "#{music.favorites.count}", style: "color: #DA1725;" %>
            <% end %>
          <% else %>
            <%= link_to music_favorites_path(music), method: :post, remote: true do %>
              <%= fa_icon "heart-o", text: "#{music.favorites.count}", style: "color: #DA1725;" %>
            <% end %>
          <% end %>
        </div>