<p>
  <strong>Title:</strong>
  <%= music.title %>
</p>

<p>
  <strong>description:</strong>
  <%= music.description %>
</p>

<p>
  <strong>Audio:</strong>
  <%= audio_tag music.audio %>
</p>


<p>
  <strong>投稿日時:</strong>
  <%= music.created_at.to_s(:datetime_jp) %>
</p>




        <!-- いいね機能 -->
        <% if user_signed_in? %>
          <div class="favorite-zone">
            <%= render 'musics/like', music: music%>
          </div>
          <div class="clip-zone">
                <% if !Clip.exists?(user_id:current_user.id,music_id:music.id) %>
                <%= link_to "お気に入り",music_add_path(music),method: :post %>
                <% else %>
                <%= link_to "お気に入り解除",music_add_path(music),method: :delete %>
                <% end %>
           </div>
        <% end %>





<%= link_to '戻る', musics_path %>
            <% if music.user == current_user %>
            <%= link_to '編集', edit_music_path(music) %>
            <%= link_to '削除', music, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>