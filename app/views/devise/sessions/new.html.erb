<section class="slice slice-lg sct-color-1">
    <div class="container">
        <div class="row">

          <div class="col-md-5 offset-md-7">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


<div class="card">
<article class="card-body">
  <h4 class="card-title text-center mb-4 mt-1">Sign in</h4>
  <hr>
  <p class="text-success text-center">Some message goes here</p>
 

  <div class="form-group">
  <div class="input-group">
    <div class="input-group-prepend">
        <span class="input-group-text"> <i class="fa fa-user fa-fw"></i> </span>
     </div>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", :placeholder => "ユーザー名" %>
  </div> <!-- input-group.// -->
  </div> <!-- form-group// -->
  <div class="form-group">
  <div class="input-group">
    <div class="input-group-prepend">
        <span class="input-group-text"> <i class="fa fa-lock fa-fw"></i> </span>
     </div>
      <%= f.password_field :password, autocomplete: "current-password", :placeholder => "パスワード 6文字以上" %>
  </div> <!-- input-group.// -->
  </div> <!-- form-group// -->
    <% if devise_mapping.rememberable? %>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.submit "ログイン", class: 'btn btn-info btn-block' %>
  </div> <!-- form-group// -->

  <% end %>
  <%= render "devise/shared/links" %>
</article>


                    </div>
                </div>
            </div>
        </div>
    </div>
</section>