<div class="container">
  <div class="row justify-content-around">
   <div class="col-md-4">
    <div class="card">
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format:'jpeg', class: "w-50 mx-auto d-block rounded-circle mt-3" , fallback: "no_image.jpg" %>
      <div class="card-body">
        <h5 class="card-title"><%= @user.name %></h5>
        <p class="card-text"><%= @user.introduction %></p>
        <%= link_to "#{@user.followings.count} フォロー", followings_user_path(@user) %>
        <%= link_to "#{@user.followers.count} フォロワー", followers_user_path(@user) %><br>
        <%= render 'relationships/follow_button', user: @user %>
      </div>
    </div>
  </div>
  <div class="col-md-8 align-self-center" style="background-color:#8BC34A;">
    <h1 id="room" data-room="<%= @room.id %>" data-user="<%= current_user.id %>"><%= @user.name %> さんとのチャット</h1>

    <div class="message">
      <% @chats.each do |chat| %>
      <div class="row">

        <% if chat.user_id == current_user.id %>
        <div class="col-6 offset-6">
          <div class="clearfix mb-2">
           <div class="float-right">

            <%= attachment_image_tag current_user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg", size:'50x50'%><br>
            <%= current_user.name %>
          </div>
          <p style="text-align: right;" class="float-right bg-info rounded mr-3"><%= chat.message %></p>


        </div>
      </div>
      <% else %>

      <div class="col-6">
        <div class="clearfix mb-2">
         <div class="float-left">
          <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:'50x50' %><br>
          <%= @user.name %>

          <p style="text-align: left;" class="float-left bg-warning rounded ml-3"><%= chat.message %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <% end %>
</div>



<textarea class="post">
</textarea>
<button type="submit" id="chat_post">
  送信する
</button>


</div>
</div>
</div>